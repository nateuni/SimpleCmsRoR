<!DOCTYPE html>
<html>
<head>
  <title>Simple CMS | <%= @page_title || 'Admin Area' %> </title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<%= stylesheet_link_tag('public', 'admin', :media => 'all') %>
</head>
	<body>
		<div id="header">
			<h1>Simple CMS Admin</h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
			<% end %>
			<div id="content">
				<%= yield %>
			</div>
		</div>	
		<div id="footer">
			<p> Copyright Nate </p >
		</div>	
	</body>
</html>